root { 
    display: block;
}
a{
    text-decoration: none;
}

.button_gray{
   
   
    height: 140px;
   width: 100px;
   margin-left: auto;
   margin-right: auto;
    background-color: blue;
}
.gray_button_link{
    width: 145px;
    height:48px;
}
.gray_button_glow{
    height:48px;
    width:145px;
    background: url(../../images/buttons/gray_buttons/gray_button_default.png);

}

a:hover .gray_button_glow{
    background:url("../../images/buttons/gray_buttons/gray_button_hover.png") repeat-x scroll 50% 50% transparent;
}

a:active .gray_button_glow{
    background:url("../../images/buttons/gray_buttons/gray_button_active.png") repeat-x scroll 50% 50% transparent;
}

.gray_button_inside_link{
    color:#65c7de;
    font-family:fantasy;
    font-size:14px;
    font-weight:bold;
    height:31px;
    padding-top:12px;
    text-align:center;
    text-decoration:none;
    width:145px;
}

